generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String    @unique @db.VarChar(30)
  age           Int
  district      String
  email         String    @unique
  password      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Validation for name will be handled in the API
  // Password will be hashed before storage
  // We'll add relations to tasks later

  @@index([email])
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String
  author      String
  createdAt   DateTime @default(now())
}
